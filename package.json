{
  "name": "clappper",
  "version": "0.1.0",
  "description": "A lightweight desktop video editor with multi-track PiP and ML Ops features",
  "author": "Clappper Team",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "npm run build:electron && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:electron": "tsc -p electron",
    "build": "vite build && tsc -p electron",
    "postinstall": "electron-builder install-app-deps",
    "pack": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --dir",
    "dist": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder"
  },
  "dependencies": {
    "concurrently": "^9.0.0",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "jspdf": "^3.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "wait-on": "^8.0.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^32.3.3",
    "electron-builder": "^24.13.3",
    "typescript": "^5.6.2",
    "vite": "^5.4.6"
  },
  "build": {
    "appId": "com.clappper.app",
    "files": [
      "dist/**",
      "electron/**",
      "node_modules/**",
      "assets/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/",
        "to": "ffmpeg/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/ffprobe-static/bin/win32/x64/ffprobe.exe",
        "to": "ffprobe/ffprobe.exe"
      },
      {
        "from": "resources/realesrgan/",
        "to": "realesrgan/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/room-detection/",
        "to": "room-detection/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/room-models/",
        "to": "room-models/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/damage-detection/",
        "to": "damage-detection/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/damage-models/",
        "to": "damage-models/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "mac": {
      "category": "public.app-category.video"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
